<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Week3.CalculatePage"
             Title="Internal Assessment"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Percentage"
                   Margin="30"
                   FontSize="Large"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                   TextColor="WhiteSmoke"/>
            <StackLayout Orientation="Horizontal" Margin="10" HorizontalOptions="Center">
                <Label x:Name="percentage" FontSize="Large" TextColor="White" ></Label>
                <Label Text="%" FontSize="Large" TextColor="White"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>