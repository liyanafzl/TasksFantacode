<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.Page2"
             Title="Second page"
             BindingContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Page 2"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <StackLayout Orientation="Vertical" Margin="10">
                <Label Text="Parameter that is bound to the view model: " TextColor="Gray"/>
                <Label Text="{Binding Parameter2}" TextColor="Black"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>